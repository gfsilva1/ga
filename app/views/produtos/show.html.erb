<div class="card-category">
    <%= cl_image_tag @produto.photo.key, height: 351, width: 400, crop: :fill %>
    <h1><%= @produto.nome %></h1>
    <h2>Descrição:<%= @produto.cor %>,<%= @produto.tamanho %>
    <h2>Preço:R$<%= @produto.valor %></h2>


    <%= link_to "Lista completa", produtos_path %>
    <%= link_to "Deletar",
            produto_path(@produto),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>
